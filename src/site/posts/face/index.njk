    const previewContainerEl = document.querySelector('.preview-container');
    const ctaEl = document.querySelector('.preview-container-cta');
    const videoEl = document.querySelector('.preview-container-video');
    const errorMessageEl = document.querySelector('.error-message');
    document.querySelectorAll('.next-step-button').forEach(
        el => el.addEventListener('click', (e) => {
