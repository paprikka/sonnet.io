    )
    ;[...document.querySelectorAll('.next-step-button')]
        .at(-1)
        .addEventListener('click', () => {
            document.querySelector('.preview-container__spacer').remove()
        })
    ctaEl.addEventListener('click', (e) => {
        e.preventDefault();
        previewContainerEl.hidden = false;
        const getVideoStream = () => 
        {
            if(!videoEl.paused) return
            return navigator.mediaDevices.getUserMedia({ 
                video: true 
            })
            .then((stream) => {
                videoEl.srcObject = stream;
                videoEl.play();
            })

        }
        getVideoStream()
        .then(
            () => {
                videoEl.style.visibility = 'visible';
                ctaEl.style.display = 'none';
                // pause the video when videoEl is not in view
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            getVideoStream()
                        } else {
                            videoEl.pause();
                            //unload the video stream from the element
                            videoEl.srcObject.getTracks().forEach(track => track.stop());
                        }
                    });
                }, { threshold: 0.5 });
                observer.observe(videoEl);
            }
        )
            .catch((err) => {
                errorMessageEl.style.visibility = 'visible';
            });
    });
</script>
