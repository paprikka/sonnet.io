---
layout: layouts/base.njk
pageClass: intro
---

<article class="blog container">
  {% include "header-blog.njk" %}
  <section class="listing">
    <h1>Writing</h1>
    <ul class='listing__posts'>
      {%- for page in collections.post | reverse-%}
        {% if (page.data.hidden != true) %}
          <li class='listing__post'>
            <time class='listing__post-time' datetime="{{ page.date }}">{{ page.date | dateDisplay("dd/MM/yy") }}</time>
            <a class='listing__post-link' href="{{ page.url }}">{{ page.data.title }}</a>
          </li>
        {% endif %}
      {%- endfor -%}
      <li class='listing__post'>
        <a  class='listing__post-link' target="_blank" href="https://medium.com/@rafal">Archive (medium.com)</a>
      </li>
    </ul>
    <hr>
  </section>
</article>